          <div class="alert alert-success">
              {{ message }}
          </div>
        {% endfor %}
        <ul>
            {% for event in events %}
                <li>
                    {% include 'component/_card.html.twig' %}
                </li>
            {% else %}
                <li>There is no event corresponding to your research for now. We'll add some soon ðŸ˜‰</li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
