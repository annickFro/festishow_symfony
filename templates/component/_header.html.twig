<header class="header">
    <div class="container">
        <a href="/" class="logo">Festishow</a>
        <div class="nav-container">
            <nav class="main-menu">
                <ul>
                    <li><a href="/">Home</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('app_style_index') }}">Styles</a></li>
                        <li><a href="{{ path('app_event_new') }}">Add</a></li>
                    {% endif %}
                </ul>
            </nav>
            <form class="searchbar" action="{{ path('app_event_search') }}" method="POST">
                <svg class="search-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12.7826 12.7826L18 18" stroke="#727272" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M8 14C11.3137 14 14 11.3137 14 8C14 4.68629 11.3137 2 8 2C4.68629 2 2 4.68629 2 8C2 11.3137 4.68629 14 8 14Z" stroke="#727272" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <input class="search" type="search" name="search" id="search" placeholder="Event, style, place..." required>
                <input class="submit" type="submit" value="Search">
            </form>
            <nav class="user-menu">
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                    <a href="/logout">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M17 13.5C17 12.6716 16.3284 12 15.5 12H8.5C7.67157 12 7 12.6716 7 13.5V14C7 15.9714 8.85951 18 12 18C15.1405 18 17 15.9714 17 14V13.5ZM14.75 8.25C14.75 6.73122 13.5188 5.5 12 5.5C10.4812 5.5 9.25 6.73122 9.25 8.25C9.25 9.76878 10.4812 11 12 11C13.5188 11 14.75 9.76878 14.75 8.25ZM22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12ZM20.5 12C20.5 7.30558 16.6944 3.5 12 3.5C7.30558 3.5 3.5 7.30558 3.5 12C3.5 16.6944 7.30558 20.5 12 20.5C16.6944 20.5 20.5 16.6944 20.5 12Z" fill="#212121"/>
                        </svg>
                        <span>Logout</span>
                    </a>
                {% else %}
                    <a href="/login">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M17 13.5C17 12.6716 16.3284 12 15.5 12H8.5C7.67157 12 7 12.6716 7 13.5V14C7 15.9714 8.85951 18 12 18C15.1405 18 17 15.9714 17 14V13.5ZM14.75 8.25C14.75 6.73122 13.5188 5.5 12 5.5C10.4812 5.5 9.25 6.73122 9.25 8.25C9.25 9.76878 10.4812 11 12 11C13.5188 11 14.75 9.76878 14.75 8.25ZM22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12ZM20.5 12C20.5 7.30558 16.6944 3.5 12 3.5C7.30558 3.5 3.5 7.30558 3.5 12C3.5 16.6944 7.30558 20.5 12 20.5C16.6944 20.5 20.5 16.6944 20.5 12Z" fill="#212121"/>
                        </svg>
                        <span>Login</span>
                    </a>
                {% endif %}
            </nav>
        </div>
    </div>
</header>
