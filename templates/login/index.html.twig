{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <section class="login container">
        {% if error %}
            <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <h1>Login</h1>
            <div>
                <label for="username">Username:</label>
                <input class="input" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Your username">
            </div>
            <div>
                <label for="password">Password:</label>
                <input class="input" type="password" id="password" name="_password" placeholder="*********">
            </div>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"> #}

            {# to be protected against CSRF attacks #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <input type="submit" class="submit" value="Login">
        </form>
    </section>
{% endblock %}
