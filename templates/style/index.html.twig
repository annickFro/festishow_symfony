{% block body %}
    <section class="index style container">

        <h2>Add a new style</h2>

        <div class="style-form">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <input type="submit" class="submit" value="{{ button_label|default('Save') }}">
            {{ form_end(form) }}
        </div>

        {% if errors.style_name is defined %}
            <p class="error"><span> {{ errors.style_name }} </span></p>
        {% endif %}
        {% if errors.insert is defined %}
